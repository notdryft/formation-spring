<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.formation.spring"/>

    <bean id="unknownCommand" class="com.formation.spring.commands.UnknownCommand"/>
    <bean id="booksCommand" class="com.formation.spring.commands.BooksCommand"/>

    <bean id="selectCommand" class="com.formation.spring.commands.SelectCommand"/>
    <bean id="deleteCommand" class="com.formation.spring.commands.DeleteCommand"/>

    <bean id="exitCommand" class="com.formation.spring.commands.ExitCommand"/>

    <bean id="interpreter" class="com.formation.spring.commands.Interpreter">
        <constructor-arg>
            <map>
                <entry key="*" value-ref="unknownCommand"/>
                <entry key="select" value-ref="selectCommand"/>
                <entry key="delete" value-ref="deleteCommand"/>
                <entry key="books" value-ref="booksCommand"/>
                <entry key="quit" value-ref="exitCommand"/>
                <entry key="exit" value-ref="exitCommand"/>
            </map>
        </constructor-arg>
    </bean>
</beans>